	<properties>
		<!-- Se true disabilita i test -->
		<skipTests>false</skipTests>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<!-- Elenco degli sviluppatori -->
	<developers>
		<developer>
			<id>francesco.benincasa</id>
			<name>Francesco Benincasa</name>			
			<email>xcesco@gmail.com</email>
			<roles>
				<role>Progettista</role>
				<role>Programmatore</role>
			</roles>
		</developer>
	</developers>

	<reporting>
		<plugins>

			<!-- Javadoc Report -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8.1</version>

				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.5</source>
					<meminitial>128m</meminitial>
					<maxmem>512m</maxmem>
					<excludePackageNames>jsp;jsp.*</excludePackageNames>
				</configuration>
			</plugin>

			<!-- Test di copertura -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.5.1</version>
				<configuration />
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
				<version>2.0-beta-1</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.5</source>
					<meminitial>128m</meminitial>
					<maxmem>512m</maxmem>
					<additionalJOption>-J -XX:MaxPermSize=256</additionalJOption>
					<excludes>
						<exclude>**/*_jsp.java</exclude>
					</excludes>
				</configuration>
			</plugin>


			<!-- Change report on repository -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changelog-maven-plugin</artifactId>
				<version>2.0-beta-1</version>
			</plugin>


		</plugins>
	</reporting>
</project>
